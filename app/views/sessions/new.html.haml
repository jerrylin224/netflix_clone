%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      .sign_in.form-horizontal
        = bootstrap_form_tag url: '/sign_in' do |f|
          %header
            %h1 Sign in
          %fieldset
            .form-group
              .control-label.col-sm-2= label_tag :email, 'Email Address'
              .col-sm-4
                = email_field_tag :email, params[:email] || "", class: 'form-control', hide_label: true, icon: "envelope"
            .form-group
              .control-label.col-sm-2= label_tag :password, 'Password'
              .col-sm-4
                = password_field_tag :password, params[:password] || "", class: 'form-control', hide_label: true, icon: 'lock'
            .form-group.action
              .col-sm-offset-1
                = f.submit 'Sign in', class: 'btn btn-default'
                = link_to "Forgot Password?", forgot_password_path
